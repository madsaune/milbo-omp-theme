{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "shell",
          "style": "plain",
          "foreground": "white",
          "properties": {
            "prefix": "âš¡{",
            "postfix": "}"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#7ea4b3",
          "properties": {
            "style": "letter"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "git",
          "style": "plain",
          "foreground": "lightYellow",
          "properties": {
            "prefix": "[",
            "postfix": "] "
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#a4ff94",
          "properties": {
            "prefix": "[",
            "postfix": "]"
          }
        }
      ]
    },
    {
      "type": "newline"
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "green",
          "properties": {
            "always_enabled": true,
            "success_icon": "\u279C",
            "error_icon": "\u279C",
            "error_color": "red",
            "display_exit_code": false
          }
        }
      ]
    }
  ],
  "final_space": true
}
